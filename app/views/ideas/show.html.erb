<div class="center-block">
<h1><%= @current_user.username.capitalize %>'s  Drama Idea</h1>
<p class="text-info">
  <p>Title:  <%= @idea.title %></p>
  <p>Synopsis:
  <br>  
  <br>
  <%= @idea.description %>
  </p>
</p>
</div>
<% content_for :sidebar do %> 
  <p>Genre</p>
  <ul>
    <% @categories.each do |category| %>
      <li> <%= category.name %></li>
    <% end %>
  </ul>
<% end %>
<ol class="breadcrumb">
  <li><%= link_to "Edit Idea", edit_idea_path %></li>
  <li><%= link_to "Delete Idea", idea_path(@idea), method: :delete, data: {confirm: "Are you sure to delete this idea?"} %> </li>
  <li><%= link_to "All Ideas", idea_path(@idea) %></li>
</ol>
