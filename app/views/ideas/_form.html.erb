<%= form_for(@idea) do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :description %>
<%= f.text_field :description %>

<p class="bg-warning">
<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
</p>

<button type="button" class="bt btn-success"><%= f.submit "Submit" %></button>

<% end %>



