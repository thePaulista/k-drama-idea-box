<h1>Sign Up For an Account</h1>

<%= form_for @user do |f| %> 

  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, "Confirm Password" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Create Account" %>
  <% end %>
