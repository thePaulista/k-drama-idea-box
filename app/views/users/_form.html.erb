<%= form_for @user do |f| %> 

  <%= f.label :username %>
  <%= f.text_field :username %> <br>
  <%= f.label :email %>
  <%= f.text_field :email %> <br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %> <br>
  <p>
  <% if @user.new_record? %> 
    <%= f.submit "Create Account" %>
  <% else %>
    <%= f.submit "Update account" %>
  <% end %>
  </p>
<% end %>
