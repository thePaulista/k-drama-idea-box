<%= content_for(:title, @current_user.username.upcase) %>

<h1>Welcome <%= @user.username.capitalize %></h1>

<h3><%= @user.email %></h3>
<h4>Joined  <%= @user.created_at.strftime("%B %Y") %></h4>


<% if @ideas.any? %>
  <h3>Ideas</h3>
  <ol id="ideas">
   <% @ideas.each do |idea| %>
     <li>
       <%= link_to idea.title, idea_path %>
       <span class="date"><%= time_ago_in_words(idea.created_at) %> ago</span>
     </li>
   <% end %>
  </ol>
<% end %>

    <% if current_user == @user %>
  <%= link_to 'Create an Idea', new_idea_path(@user) %>
    <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
    <%= link_to 'Delete Account', @user,
      method: :delete,
      data: { confirm: 'Are you sure you want to permanently delete your account?' },
      class: 'button' %>
    <% end %>
</nav>

